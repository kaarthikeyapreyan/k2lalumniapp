{
  "expo": {
    "name": "AlumniHub",
    "slug": "AlumniHub",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "alumnihub",
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.alumnihub.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "AlumniHub needs access to your photo library to update your profile picture.",
        "NSCameraUsageDescription": "AlumniHub needs access to your camera to take profile pictures.",
        "NSLocationWhenInUseUsageDescription": "AlumniHub uses your location to show nearby alumni."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0066CC"
      },
      "package": "com.alumnihub.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/splash-icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#0066CC"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
